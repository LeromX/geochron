<UserControl x:Class="GeochronScreensaver.UI.GlobeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:GeochronScreensaver.UI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Black">
    <Grid>
        <Grid x:Name="ViewportContainer"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <!-- The Viewport3D will be added programmatically -->
        </Grid>

        <!-- Time overlay -->
        <Border Background="#B0000000"
                CornerRadius="5"
                Padding="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10">
            <StackPanel>
                <TextBlock x:Name="InfoText"
                           Foreground="White"
                           FontSize="18"
                           FontFamily="Consolas"
                           FontWeight="Bold"/>
                <TextBlock x:Name="SelectedLocationText"
                           Foreground="White"
                           FontSize="14"
                           FontFamily="Consolas"
                           Opacity="0"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
